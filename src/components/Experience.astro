---
const { jobHistory } = Astro.props;
---

<section
  id="experience"
  data-section
  class="snap-start min-h-screen px-4 pt-20 pb-40 overflow-y-auto"
>
  <div class="max-w-2xl mx-auto">
    <h2 class="text-3xl font-bold mb-8">Experience</h2>

    {jobHistory.map((job, index) => (
      <div
        class="job-card opacity-0 transition-all duration-500 mb-10 p-4 border border-gray-200 rounded-lg shadow-sm bg-white/90 backdrop-blur-md"
        data-job
      >
        <h3 class="text-xl font-bold">
          {job.title} @ {job.company?.name ?? 'Unknown'}
        </h3>
        <p class="text-sm text-gray-600">
          {job.startDate} â€“ {job.endDate}
        </p>
        {job.summary && <p class="mt-2 text-gray-700">{job.summary}</p>}
        {Array.isArray(job.highlights) && job.highlights.length > 0 && (
          <ul class="mt-2 list-disc pl-5 text-gray-700">
            {job.highlights.map((item) => <li>{item}</li>)}
          </ul>
        )}
      </div>
    ))}
  </div>
</section>

