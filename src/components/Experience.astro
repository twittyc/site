---
const { jobHistory } = Astro.props;
---
<section class="mt-10">
  <h2 class="text-2xl font-semibold mb-4">Experience</h2>
  <div class="space-y-6">
    {jobHistory.map(job => (
      <div class="p-4 border border-gray-200 rounded-lg shadow-sm">
        <h3 class="text-xl font-bold">{job.title} @ {job.company.name}</h3>
        <p class="text-sm text-gray-600">{job.startDate} - {job.endDate}</p>
        {job.summary && <p class="mt-2 text-gray-700">{job.summary}</p>}
        {job.highlights.length > 0 && (
          <ul class="mt-2 list-disc pl-5 text-gray-700">
            {job.highlights.map(item => <li>{item}</li>)}
          </ul>
        )}
      </div>
    ))}
  </div>
</section>